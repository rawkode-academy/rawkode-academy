---
export const prerender = true;

import { css } from "styled-system/css";
import "../styles/global.css";

const pageStyles = css({
	minHeight: "100vh",
	background: "linear-gradient(135deg, #0a0a0f 0%, #1a1a2e 50%, #16213e 100%)",
	position: "relative",
	overflow: "hidden",
});

const gridOverlay = css({
	position: "fixed",
	inset: 0,
	backgroundImage: `
		linear-gradient(rgba(139, 92, 246, 0.03) 1px, transparent 1px),
		linear-gradient(90deg, rgba(139, 92, 246, 0.03) 1px, transparent 1px)
	`,
	backgroundSize: "60px 60px",
	pointerEvents: "none",
	zIndex: 0,
});

const containerStyles = css({
	position: "relative",
	zIndex: 10,
	maxWidth: "800px",
	marginInline: "auto",
	paddingBlock: "2rem 4rem",
	paddingInline: "1rem",
});

const backLinkStyles = css({
	display: "inline-flex",
	alignItems: "center",
	gap: "0.5rem",
	color: "rgba(255, 255, 255, 0.6)",
	textDecoration: "none",
	fontSize: "0.875rem",
	marginBottom: "1.5rem",
	transition: "color 0.2s",
	"&:hover": {
		color: "white",
	},
});

const headerStyles = css({
	marginBottom: "2.5rem",
});

const titleStyles = css({
	fontSize: "clamp(2rem, 5vw, 3rem)",
	fontWeight: 700,
	color: "white",
	marginBottom: "0.5rem",
});

const subtitleStyles = css({
	fontSize: "1rem",
	color: "rgba(255, 255, 255, 0.6)",
});

const faqListStyles = css({
	display: "flex",
	flexDirection: "column",
	gap: "1rem",
});

const faqItemStyles = css({
	padding: "1.25rem",
	background: "rgba(255, 255, 255, 0.03)",
	border: "1px solid rgba(255, 255, 255, 0.1)",
	borderRadius: "0.75rem",
	transition: "all 0.2s",
	"&:hover": {
		borderColor: "rgba(139, 92, 246, 0.3)",
	},
});

const questionStyles = css({
	display: "flex",
	alignItems: "flex-start",
	gap: "0.75rem",
	fontSize: "1rem",
	fontWeight: 600,
	color: "white",
	marginBottom: "0.75rem",
});

const qIconStyles = css({
	flexShrink: 0,
	display: "flex",
	alignItems: "center",
	justifyContent: "center",
	width: "1.5rem",
	height: "1.5rem",
	background: "rgba(139, 92, 246, 0.2)",
	borderRadius: "0.375rem",
	color: "#a78bfa",
	fontSize: "0.75rem",
	fontWeight: 700,
});

const answerStyles = css({
	color: "rgba(255, 255, 255, 0.75)",
	fontSize: "0.9375rem",
	lineHeight: 1.7,
	paddingLeft: "2.25rem",
});

const navLinksStyles = css({
	display: "flex",
	gap: "1rem",
	marginTop: "2rem",
	flexWrap: "wrap",
});

const navLinkStyles = css({
	display: "inline-flex",
	alignItems: "center",
	gap: "0.375rem",
	padding: "0.5rem 0.875rem",
	background: "rgba(255, 255, 255, 0.05)",
	border: "1px solid rgba(255, 255, 255, 0.15)",
	borderRadius: "0.5rem",
	color: "rgba(255, 255, 255, 0.8)",
	fontSize: "0.8125rem",
	textDecoration: "none",
	transition: "all 0.2s",
	"&:hover": {
		background: "rgba(139, 92, 246, 0.15)",
		borderColor: "rgba(139, 92, 246, 0.4)",
		color: "white",
	},
});

const faqs = [
	{
		q: "What is Klustered?",
		a: "Klustered is a live Kubernetes debugging competition where participants are given intentionally broken clusters to fix. It's part game show, part technical challenge, and 100% chaos. Think of it as a live CTF but for Kubernetes troubleshooting."
	},
	{
		q: "Do I need to be a Kubernetes expert to compete?",
		a: "Not at all! We welcome participants of all skill levels. The challenges are designed to be educational, and even experienced engineers often learn something new. The goal is to have fun and learn, regardless of whether you win."
	},
	{
		q: "How do I register to compete?",
		a: "Sign in on the homepage and register for either the Solo or Team bracket. Once registration is open, you'll be able to confirm your participation. We'll send notifications via Discord when it's time to confirm."
	},
	{
		q: "What timezone are match times displayed in?",
		a: "All times are displayed in your local timezone by default. You can change the timezone using the selector on the schedule page. Times are stored in UTC internally."
	},
	{
		q: "Can I use external resources during my match?",
		a: "Yes! Documentation, search engines, and even AI assistants are all fair game. We want to simulate real-world debugging scenarios. The only restriction is getting direct help from other people."
	},
	{
		q: "What happens if I can't make my scheduled match?",
		a: "Please let us know as soon as possible via Discord. We'll try to reschedule if possible, but we may need to arrange a forfeit depending on the bracket stage and timing."
	},
	{
		q: "How are winners determined?",
		a: "Winners are determined by completing the debugging objectives first, or by making the most progress within the time limit. The hosts make final decisions on edge cases."
	},
	{
		q: "Is there a prize for winning?",
		a: "Prizes vary by season. Check the current competition announcement for specific prize details. But really, the main prize is eternal bragging rights and the knowledge you gained."
	},
	{
		q: "How can I watch without competing?",
		a: "All matches are streamed live on our channel. Subscribe to get notified when we go live. Past matches are also available as VODs on the Rawkode Academy."
	},
	{
		q: "I have more questions. Where can I ask?",
		a: "Join our Discord server! That's the best place to ask questions, get help, and stay updated on competition news."
	}
];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>FAQ - Klustered '26</title>
		<meta name="description" content="Frequently asked questions about Klustered '26 competition. Learn about registration, match format, rules, and more." />
	</head>
	<body>
		<main class={pageStyles}>
			<div class={gridOverlay}></div>

			<div class={containerStyles}>
				<a href="/" class={backLinkStyles}>
					<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
					</svg>
					Back to Home
				</a>

				<header class={headerStyles}>
					<h1 class={titleStyles}>Frequently Asked Questions</h1>
					<p class={subtitleStyles}>
						Everything you want to know about Klustered '26
					</p>
				</header>

				<div class={faqListStyles}>
					{faqs.map((faq) => (
						<div class={faqItemStyles}>
							<h2 class={questionStyles}>
								<span class={qIconStyles}>Q</span>
								<span>{faq.q}</span>
							</h2>
							<p class={answerStyles}>{faq.a}</p>
						</div>
					))}
				</div>

				<nav class={navLinksStyles}>
					<a href="/schedule" class={navLinkStyles}>
						<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
							<line x1="16" y1="2" x2="16" y2="6" />
							<line x1="8" y1="2" x2="8" y2="6" />
							<line x1="3" y1="10" x2="21" y2="10" />
						</svg>
						View Schedule
					</a>
					<a href="/rules" class={navLinkStyles}>
						<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
						</svg>
						Competition Rules
					</a>
				</nav>
			</div>
		</main>
	</body>
</html>
