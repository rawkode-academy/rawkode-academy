---
import { Font } from "astro:assets";
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";

type Props = {
	title?: string;
	description?: string;
	canonicalPath?: string;
	robots?: "index, follow" | "noindex, nofollow";
	ogType?: "website" | "article";
	siteName?: string;
	ogImagePath?: string | null;
	twitterCard?: "summary" | "summary_large_image";
};

const DEFAULT_DESCRIPTION = "Rawkode News community links, discussions, and engineering write-ups.";
const SOCIAL_DESCRIPTION_MAX = 200;

const normalizeMetaText = (value: string) => value.replace(/\s+/g, " ").trim();

const truncateMetaText = (value: string, max: number) => {
	if (value.length <= max) return value;
	return `${value.slice(0, max - 1).trimEnd()}…`;
};

const withSiteContext = (value: string, siteName: string) => {
	const normalizedValue = normalizeMetaText(value);
	const normalizedSiteName = normalizeMetaText(siteName);
	if (!normalizedValue || !normalizedSiteName) {
		return normalizedValue;
	}

	const includesSiteName = normalizedValue
		.toLowerCase()
		.includes(normalizedSiteName.toLowerCase());
	return includesSiteName ? normalizedValue : `${normalizedValue} — ${normalizedSiteName}`;
};

const {
	title = "Rawkode News",
	description,
	canonicalPath,
	robots = "index, follow",
	ogType = "website",
	siteName = "Rawkode News",
	ogImagePath = "/og.webp",
	twitterCard = ogImagePath ? "summary_large_image" : "summary",
} = Astro.props as Props;

const resolvedDescription = normalizeMetaText(description ?? "") || DEFAULT_DESCRIPTION;
const socialDescription = truncateMetaText(
	withSiteContext(resolvedDescription, siteName),
	SOCIAL_DESCRIPTION_MAX,
);

const canonicalHref = canonicalPath
	? new URL(canonicalPath, Astro.site ?? Astro.url).toString()
	: null;
const pageUrl = canonicalHref ?? Astro.url.toString();
const ogImageUrl = ogImagePath
	? new URL(ogImagePath, Astro.site ?? Astro.url).toString()
	: null;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<Font cssVariable="--font-sora" />
		<Font cssVariable="--font-ibm-plex-sans" />
		<Font cssVariable="--font-monaspace-neon" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="icon" href="/favicon.ico" sizes="any" />
		<link rel="manifest" href="/site.webmanifest" />
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={resolvedDescription} />
		<meta name="robots" content={robots} />
		{canonicalHref ? <link rel="canonical" href={canonicalHref} /> : null}
		<meta property="og:type" content={ogType} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={socialDescription} />
		<meta property="og:url" content={pageUrl} />
		<meta property="og:site_name" content={siteName} />
		<meta property="og:locale" content="en_US" />
		{ogImageUrl ? <meta property="og:image" content={ogImageUrl} /> : null}
		{ogImageUrl ? <meta property="og:image:alt" content={`${siteName} social preview`} /> : null}
		<meta name="twitter:card" content={twitterCard} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={socialDescription} />
		<meta name="twitter:url" content={pageUrl} />
		{ogImageUrl ? <meta name="twitter:image" content={ogImageUrl} /> : null}
		<ClientRouter />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
