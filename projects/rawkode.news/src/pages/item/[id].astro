---
import CommentsPanel from "@/components/post/CommentsPanel.svelte";
import AppShell from "@/components/layout/AppShell.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { formatRelativeTime } from "@/lib/contracts";
import { parseEntityId } from "@/lib/ids";
import { renderMarkdownToHtml } from "@/lib/markdown";
import { buildCanonicalPath, getPostMeta, postUnavailableCopy } from "@/lib/seo";
import { buttonPrimarySmClass, inlineBackLinkSmClass, inlinePrimaryLinkClass } from "@/lib/ui-classes";
import { getPostById, listCommentsByPostId } from "@/lib/server/posts";
import { getSessionWithPermissions } from "@/lib/server/session";
import type { TypedEnv } from "@/types/service-bindings";

const env = Astro.locals.runtime.env as TypedEnv;

const postId = parseEntityId(Astro.params.id);
if (!postId) {
  Astro.response.status = 400;
}

const { session, permissions } = await getSessionWithPermissions(env, Astro.cookies);
const post = postId ? await getPostById(env, postId) : null;
const comments = postId ? await listCommentsByPostId(env, postId) : [];
const markdownHtml = post?.body ? renderMarkdownToHtml(post.body) : "";

const returnPathParam = Astro.url.searchParams.get("from");
const returnPath = returnPathParam?.startsWith("/") && !returnPathParam.startsWith("/item/")
  ? returnPathParam
  : "/";
const signInUrl = `/api/auth/sign-in?returnTo=${encodeURIComponent(
  `${Astro.url.pathname}${Astro.url.search}`,
)}`;

const meta = getPostMeta(post);
const canonicalPath = post ? buildCanonicalPath(`/item/${post.id}`) : undefined;
---

<BaseLayout
  title={meta.title}
  description={meta.description}
  canonicalPath={canonicalPath}
  robots={meta.robots}
  ogType={meta.ogType}
>
  <AppShell
    pathname={Astro.url.pathname}
    search={Astro.url.search}
    user={session?.user ?? null}
    isAdmin={Boolean(permissions?.isAdmin)}
  >
    {
      !post ? (
        <main class="py-7">
          <section class="rkn-panel space-y-5 p-6 sm:p-7">
            <div class="space-y-2">
              <p class="rkn-kicker">{postUnavailableCopy.kicker}</p>
              <h1 class="rkn-page-title">{postUnavailableCopy.heading}</h1>
              <p class="text-sm text-muted-foreground">
                {postUnavailableCopy.detail}
              </p>
            </div>
            <a
              href="/"
              class={buttonPrimarySmClass}
            >
              Go to latest posts
            </a>
          </section>
        </main>
      ) : (
        <main class="space-y-6 py-7">
          <div class="flex items-center">
            <a href={returnPath} class={inlineBackLinkSmClass}>
              Back to feed
            </a>
          </div>

          <article class="space-y-6 border-b border-border/75 pb-6 sm:pb-7">
            <header class="rkn-view-header space-y-3">
              <p class="rkn-kicker">Post</p>
              <h1 class="rkn-page-title break-words" dir="auto">
                {post.title}
              </h1>

              <div class="flex flex-wrap items-center gap-1.5 text-xs text-muted-foreground">
                <span>Posted {formatRelativeTime(post.createdAt)}</span>
                <span>•</span>
                <span>
                  Shared by <span class="break-words font-semibold text-foreground" dir="auto">{post.author}</span>
                </span>
                {
                  post.tags.length > 0 ? (
                    <>
                      <span>•</span>
                      <span class="flex max-w-full flex-wrap items-center gap-1">
                        {post.tags.map((tag) => (
                          <span
                            class="inline-flex h-5 max-w-full items-center rounded-md border border-border bg-muted px-1.5 text-[10px] leading-none font-semibold uppercase tracking-wide text-foreground"
                            title={tag.slug}
                            dir="auto"
                          >
                            {tag.slug}
                          </span>
                        ))}
                      </span>
                    </>
                  ) : null
                }
              </div>

              {post.url ? (
                <a
                  href={post.url}
                  target="_blank"
                  rel="noreferrer"
                  class={inlinePrimaryLinkClass}
                >
                  Open source link
                  <span class="text-muted-foreground">↗</span>
                </a>
              ) : null}
            </header>

            {
              post.body ? (
                <div class="rkn-prose max-w-none" set:html={markdownHtml} />
              ) : null
            }
          </article>

          <section id="discussion" class="space-y-5">
            <header class="space-y-1">
              <p class="rkn-kicker">Discussion</p>
              <h2 class="font-display text-xl font-semibold">Discuss this post</h2>
              <p class="text-sm text-muted-foreground">Share concrete points, disagree respectfully, and cite sources when useful.</p>
            </header>

            <CommentsPanel
              client:load
              postId={post.id}
              returnTo={`/item/${post.id}`}
              canReply={Boolean(session?.user)}
              signInUrl={signInUrl}
              initialComments={comments}
            />
          </section>
        </main>
      )
    }
  </AppShell>
</BaseLayout>
