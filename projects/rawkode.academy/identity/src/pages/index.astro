---
import { createAuth } from "../lib/auth";

export const prerender = false;

const env = Astro.locals.runtime.env;
const auth = await createAuth(env);
const session = await auth.api.getSession({
	headers: Astro.request.headers,
});
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Rawkode Academy Identity</title>
		<style>
			body {
				font-family: system-ui, -apple-system, sans-serif;
				display: flex;
				justify-content: center;
				align-items: center;
				min-height: 100vh;
				margin: 0;
				background: #0f172a;
				color: #e2e8f0;
			}
			.container {
				text-align: center;
				padding: 2rem;
				background: #1e293b;
				border-radius: 1rem;
				box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
				max-width: 24rem;
				width: 100%;
			}
			h1 {
				font-size: 1.5rem;
				margin-bottom: 0.5rem;
				color: #f8fafc;
			}
			p {
				color: #94a3b8;
				margin-bottom: 1.5rem;
			}
			.btn {
				display: inline-block;
				background: #3b82f6;
				color: white;
				padding: 0.75rem 1.5rem;
				border-radius: 0.5rem;
				text-decoration: none;
				font-weight: 500;
				transition: background-color 0.2s;
				border: none;
				cursor: pointer;
				font-size: 1rem;
			}
			.btn:hover {
				background: #2563eb;
			}
			.user-info {
				text-align: left;
				background: #0f172a;
				padding: 1rem;
				border-radius: 0.5rem;
				margin-bottom: 1.5rem;
				font-family: monospace;
				font-size: 0.875rem;
				overflow-x: auto;
			}
			.avatar {
				width: 4rem;
				height: 4rem;
				border-radius: 9999px;
				margin-bottom: 1rem;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<h1>Rawkode Academy Identity</h1>
			
			{session ? (
				<div>
					{session.user.image && (
						<img src={session.user.image} alt={session.user.name} class="avatar" />
					)}
					<p>Welcome back, {session.user.name}!</p>
					
					<div class="user-info">
						<div>ID: {session.user.id}</div>
						<div>Email: {session.user.email}</div>
					</div>

					<button id="logout-btn" class="btn">Sign Out</button>
				</div>
			) : (
				<div>
					<p>OpenID Connect Provider for Rawkode Academy services</p>
					<a href="/auth/sign-in/social?provider=github" class="btn">
						Sign in with GitHub
					</a>
				</div>
			)}
		</div>

		<script>
			const logoutBtn = document.getElementById('logout-btn');
			if (logoutBtn) {
				logoutBtn.addEventListener('click', async () => {
					await fetch('/auth/sign-out', {
						method: 'POST',
						headers: {
							'Content-Type': 'application/json'
						}
					});
					window.location.reload();
				});
			}
		</script>
	</body>
</html>
