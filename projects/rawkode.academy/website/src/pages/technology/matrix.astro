		.cell-skip::before { content: 'Skip'; color: rgb(239, 68, 68); }
		.cell-watch::before { content: 'Watch'; color: rgb(249, 115, 22); }
		.cell-explore::before { content: 'Explore'; color: rgb(202, 138, 4); }
