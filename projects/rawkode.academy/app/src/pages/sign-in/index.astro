---
export const prerender = false;

import { getSignInUrl } from "@/lib/auth/server";
import "@/styles/index.css";

const returnTo = Astro.url.searchParams.get("returnTo") || "/";
const callbackUrl = `https://app.rawkode.academy${returnTo}`;
const signInUrl = getSignInUrl(callbackUrl);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Sign In - Rawkode Academy</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	</head>
	<body>
		<div class="container">
			<div class="card">
				<div class="logo">
					<svg width="48" height="48" viewBox="0 0 100 100" fill="none">
						<circle cx="50" cy="50" r="45" fill="rgb(4, 181, 156)" />
						<text
							x="50"
							y="65"
							text-anchor="middle"
							fill="white"
							font-size="40"
							font-weight="bold"
							font-family="system-ui"
						>
							R
						</text>
					</svg>
				</div>
				<h1>Welcome to Rawkode Academy</h1>
				<p class="subtitle">Sign in to access your learning content</p>
				<a href={signInUrl} class="sign-in-button">
					<svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
						<path
							d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
						/>
					</svg>
					Sign in with GitHub
				</a>
			</div>
		</div>
	</body>
</html>

<style>
	:root {
		--brand-primary: rgb(4, 181, 156);
		--brand-secondary: rgb(133, 255, 149);
		--surface-base: #f5f7ff;
		--surface-card: rgba(255, 255, 255, 0.9);
		--text-primary: rgb(17, 24, 39);
		--text-secondary: rgb(55, 65, 81);
	}

	@media (prefers-color-scheme: dark) {
		:root {
			--surface-base: #030617;
			--surface-card: rgba(8, 14, 31, 0.9);
			--text-primary: rgb(255, 255, 255);
			--text-secondary: rgb(209, 213, 219);
		}
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family:
			"Poppins",
			system-ui,
			-apple-system,
			sans-serif;
		background: var(--surface-base);
		color: var(--text-primary);
		min-height: 100vh;
	}

	.container {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 1rem;
	}

	.card {
		background: var(--surface-card);
		backdrop-filter: blur(24px);
		border-radius: 1.5rem;
		border: 1px solid rgba(128, 128, 128, 0.1);
		padding: 3rem;
		text-align: center;
		max-width: 400px;
		width: 100%;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
	}

	.logo {
		margin-bottom: 1.5rem;
	}

	h1 {
		font-family: "Quicksand", sans-serif;
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
	}

	.subtitle {
		color: var(--text-secondary);
		margin-bottom: 2rem;
	}

	.sign-in-button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		background: var(--text-primary);
		color: var(--surface-base);
		padding: 0.875rem 1.5rem;
		border-radius: 0.75rem;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s;
		width: 100%;
	}

	.sign-in-button:hover {
		opacity: 0.9;
		transform: translateY(-1px);
	}
</style>
