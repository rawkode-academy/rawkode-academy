---
export const prerender = false;

import { getCollection, getEntries, render } from "astro:content";
import AppLayout from "@/layouts/app.astro";

const { slug } = Astro.params;
const articles = await getCollection("articles");
const article = articles.find((a) => a.id === slug);

if (!article) {
	return Astro.redirect("/read");
}

const { Content, headings } = await render(article);
const authors = await getEntries(article.data.authors);
---

<AppLayout title={`${article.data.title} - Rawkode Academy`}>
	<div class="article-page">
		<nav class="breadcrumb">
			<a href="/read">Articles</a>
			<span>/</span>
			<span>{article.data.title}</span>
		</nav>

		<article class="article">
			<header class="article-header">
				<span class="article-type">{article.data.type}</span>
				<h1>{article.data.title}</h1>
				{article.data.subtitle && <p class="subtitle">{article.data.subtitle}</p>}

				<div class="article-meta">
					<div class="authors">
						{authors.map((author) => (
							<div class="author">
								{author.data.avatarUrl && (
									<img
										src={author.data.avatarUrl}
										alt={author.data.name}
										class="author-avatar"
									/>
								)}
								<span>{author.data.name}</span>
							</div>
						))}
					</div>
					<time>
						{article.data.publishedAt.toLocaleDateString("en-US", {
							month: "long",
							day: "numeric",
							year: "numeric",
						})}
					</time>
				</div>
			</header>

			{headings.length > 0 && (
				<nav class="toc">
					<h2>Table of Contents</h2>
					<ul>
						{headings.filter(h => h.depth <= 3).map((heading) => (
							<li class={`depth-${heading.depth}`}>
								<a href={`#${heading.slug}`}>{heading.text}</a>
							</li>
						))}
					</ul>
				</nav>
			)}

			<div class="article-content prose">
				<Content />
			</div>
		</article>
	</div>
</AppLayout>

<style>
	.article-page {
		max-width: 800px;
		margin: 0 auto;
	}

	.breadcrumb {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
		font-size: 0.875rem;
		color: var(--text-muted);
	}

	.breadcrumb a {
		color: var(--brand-primary);
		text-decoration: none;
	}

	.breadcrumb a:hover {
		text-decoration: underline;
	}

	.article {
		background: var(--surface-card);
		backdrop-filter: blur(24px);
		border: 1px solid var(--surface-border);
		border-radius: 1rem;
		padding: 2rem;
	}

	.article-header {
		margin-bottom: 2rem;
		padding-bottom: 1.5rem;
		border-bottom: 1px solid var(--surface-border);
	}

	.article-type {
		display: inline-block;
		padding: 0.25rem 0.75rem;
		border-radius: 9999px;
		font-size: 0.75rem;
		font-weight: 500;
		text-transform: capitalize;
		background: rgba(4, 181, 156, 0.1);
		color: var(--brand-primary);
		margin-bottom: 1rem;
	}

	.article-header h1 {
		font-family: "Quicksand", sans-serif;
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
		line-height: 1.3;
	}

	.subtitle {
		color: var(--text-secondary);
		font-size: 1.1rem;
		margin-bottom: 1rem;
	}

	.article-meta {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.authors {
		display: flex;
		gap: 1rem;
	}

	.author {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.author-avatar {
		width: 32px;
		height: 32px;
		border-radius: 50%;
	}

	.author span {
		font-weight: 500;
	}

	.article-meta time {
		color: var(--text-muted);
		font-size: 0.875rem;
	}

	.toc {
		background: var(--surface-border);
		border-radius: 0.75rem;
		padding: 1rem 1.5rem;
		margin-bottom: 2rem;
	}

	.toc h2 {
		font-size: 0.875rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--text-muted);
		margin-bottom: 0.75rem;
	}

	.toc ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.toc li {
		margin: 0.25rem 0;
	}

	.toc li.depth-2 {
		padding-left: 0;
	}

	.toc li.depth-3 {
		padding-left: 1rem;
	}

	.toc a {
		color: var(--text-secondary);
		text-decoration: none;
		font-size: 0.875rem;
	}

	.toc a:hover {
		color: var(--brand-primary);
	}

	.article-content {
		line-height: 1.8;
	}

	.article-content :global(h2),
	.article-content :global(h3),
	.article-content :global(h4) {
		font-family: "Quicksand", sans-serif;
		margin-top: 2rem;
		margin-bottom: 1rem;
	}

	.article-content :global(p) {
		margin-bottom: 1rem;
	}

	.article-content :global(code) {
		background: var(--surface-border);
		padding: 0.2em 0.4em;
		border-radius: 0.25rem;
		font-size: 0.9em;
	}

	.article-content :global(pre) {
		background: var(--surface-border);
		padding: 1rem;
		border-radius: 0.5rem;
		overflow-x: auto;
		margin: 1.5rem 0;
	}

	.article-content :global(pre code) {
		background: none;
		padding: 0;
	}

	:root {
		--brand-primary: rgb(4, 181, 156);
		--surface-card: rgba(255, 255, 255, 0.85);
		--surface-border: rgba(0, 0, 0, 0.08);
		--text-secondary: rgb(55, 65, 81);
		--text-muted: rgb(107, 114, 128);
	}

	@media (prefers-color-scheme: dark) {
		:root {
			--surface-card: rgba(8, 14, 31, 0.9);
			--surface-border: rgba(255, 255, 255, 0.08);
			--text-secondary: rgb(209, 213, 219);
			--text-muted: rgb(156, 163, 175);
		}
	}
</style>
