{
	"$schema": "../node_modules/wrangler/config-schema.json",
	"name": "platform-email-service-rpc",
	"main": "main.ts",
	"compatibility_date": "2025-04-05",
	"compatibility_flags": ["nodejs_compat"],
	"keep_vars": false,
	"minify": true,
	"observability": {
		"traces": {
			"enabled": true,
			"destinations": ["grafana-traces"]
		},
		"logs": {
			"enabled": true,
			"destinations": ["grafana-logs"]
		}
	},
	"placement": {
		"mode": "smart"
	},
	"workers_dev": true,
	"send_email": [
		{
			"name": "SEND_EMAIL"
		}
	],
	"services": [
		{
			"binding": "EMAIL_PREFERENCES",
			"service": "platform-email-preferences-rpc"
		},
		{
			"binding": "ANALYTICS",
			"service": "rawkode-tools-observability-collector"
		}
	]
}
