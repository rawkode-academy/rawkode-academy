{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://purl.imsglobal.org/spec/ob/v3p0/schema/json/ob_v3p0_achievementcredential_schema.json",
	"title": "AchievementCredential",
	"description": "OpenBadge 3.0 Achievement Credential schema",
	"type": "object",
	"required": [
		"@context",
		"id",
		"type",
		"issuer",
		"credentialSubject",
		"validFrom"
	],
	"properties": {
		"@context": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"minItems": 2
		},
		"id": {
			"type": "string"
		},
		"type": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"minItems": 1
		},
		"issuer": {
			"$ref": "#/definitions/Profile"
		},
		"credentialSubject": {
			"$ref": "#/definitions/CredentialSubject"
		},
		"validFrom": {
			"type": "string",
			"format": "date-time"
		},
		"validUntil": {
			"type": "string",
			"format": "date-time"
		},
		"proof": {
			"$ref": "#/definitions/Proof"
		}
	},
	"definitions": {
		"Profile": {
			"type": "object",
			"required": ["id", "type", "name"],
			"properties": {
				"id": {
					"type": "string"
				},
				"type": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"minItems": 1
				},
				"name": {
					"type": "string",
					"minLength": 1
				},
				"url": {
					"type": "string"
				},
				"email": {
					"type": "string",
					"format": "email"
				}
			}
		},
		"CredentialSubject": {
			"type": "object",
			"required": ["id", "type", "achievement"],
			"properties": {
				"id": {
					"type": "string"
				},
				"type": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"minItems": 1
				},
				"achievement": {
					"$ref": "#/definitions/Achievement"
				}
			}
		},
		"Achievement": {
			"type": "object",
			"required": ["id", "type", "creator", "name", "description"],
			"properties": {
				"id": {
					"type": "string"
				},
				"type": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"minItems": 1
				},
				"creator": {
					"$ref": "#/definitions/Profile"
				},
				"name": {
					"type": "string",
					"minLength": 1
				},
				"description": {
					"type": "string"
				},
				"image": {
					"$ref": "#/definitions/Image"
				}
			}
		},
		"Image": {
			"type": "object",
			"required": ["id", "type"],
			"properties": {
				"id": {
					"type": "string"
				},
				"type": {
					"const": "Image"
				}
			}
		},
		"Proof": {
			"type": "object",
			"required": ["type", "created", "verificationMethod", "proofPurpose"],
			"properties": {
				"type": {
					"type": "string"
				},
				"created": {
					"type": "string",
					"format": "date-time"
				},
				"verificationMethod": {
					"type": "string"
				},
				"proofPurpose": {
					"type": "string"
				},
				"jwt": {
					"type": "string"
				}
			}
		}
	}
}
