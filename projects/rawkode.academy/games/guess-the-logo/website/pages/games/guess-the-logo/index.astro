---
import PageWrapper from "@/wrappers/page.astro";
---

<PageWrapper
	title="Guess the Logo"
	description="Daily logo challenge: 5 logos, 5 lives, one attempt"
>
	<div class="game-wrapper bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-950">
		<div id="guess-the-logo-root"></div>
	</div>
</PageWrapper>

<script>
	import { createApp } from "vue";
	import Game from "@games/guess-the-logo/website/ui/Game.vue";

	const app = createApp(Game);
	app.mount("#guess-the-logo-root");
</script>

<style>
	.game-wrapper {
		width: 100%;
		min-height: calc(100vh - 200px);
		border-radius: 12px;
		overflow: hidden;
	}

	#guess-the-logo-root {
		width: 100%;
		height: 100%;
		min-height: calc(100vh - 200px);
	}
</style>
